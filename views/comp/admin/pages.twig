<div class="crud-head">
	<div class="title">Pages</div>
	<button class="new-btn">New</button>
</div>
<div class="crud-body">
	<div class="new-form">
		<form action="/api/v1/page" method="put" api-form="/api/v1/page">
			<div class="frm-title">
				<h2>New Page</h2>
				<button type="button" class="close">&times;</button>
			</div>
			<div class="input-group">
				<label for="slug">Slug</label>
				<input name="slug" required pattern="^[a-z0-9\-]+$" type="text">
			</div>
			<div class="input-group">
				<label for="title">Title</label>
				<input name="title" required pattern="^[a-zA-Z 0-9]+$" type="text">
			</div>
			<div class="input-group">
				<label for="keywords">Keywords</label>
				<input name="keywords" required pattern="^[a-zA-Z 0-9\,\-]+$" type="text">
			</div>
			<div class="input-group">
				<label for="description">Description</label>
				<input name="description" required pattern="^[a-zA-Z0-9 \,\!\@\#\$\%\&\*\(\)]+$" type="text">
			</div>
			<div class="input-group">
				<label for="og">OG Tags</label>
				<textarea name="og" id="og"></textarea>
			</div>
			<div class="input-group">
				<label for="snippet">Snippets</label>
				<textarea name="snippet" id="snippet"></textarea>
			</div>
			<div class="input-group">
				<label for="customcss">Custom CSS</label>
				<textarea name="customcss" id="customcss"></textarea>
			</div>
			<div class="input-group flx-right">
				<button type="submit">Create</button>
			</div>
		</form>
	</div>
    <div class="table-container">
        <table data-api="/api/v1/page" datatable="page">
            <thead>
                <tr>
                    <th>Sl. No.</th>
                    <th>slug</th>
                    <th>Title</th>
                    <th>Actions</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
