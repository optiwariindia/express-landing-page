<div class="crud-head">
	<div class="title">USP Area:
		{{info.title}}
	</div>
	<button class="new-btn">New</button>
</div>
<div class="crud-body">
	<div class="new-form">
		<form action="/api/v1/usp/{{info.slug}}" method="post" enctype="multipart/form-data" api-form="/api/v1/usp/{{info.slug}}">
			<div class="frm-title">
				<h2>New USP</h2>
				<button type="button" class="close">&times;</button>
			</div>
			<div class="input-group">
				<label for="thumbnail">Click to change
					<img src="/images/about.jpg" input="thumbnail">
				</label>
				<input type="file" name="thumbnail" id="thumbnail" accept="image/jpeg,image/png,image/webp">
			</div>
			<div class="input-group">
				<label for="name">Name</label>
				<input name="name" required pattern="^[a-zA-Z 0-9]+$" type="text">
			</div>
			<div class="input-group">
				<label for="description">description</label>
				<input name="description" required type="text">
			</div>
			<div class="input-group flx-right">
				<button type="submit">Add</button>
			</div>
		</form>
	</div>
	<div class="table-container">
		<table>
			<thead>
				<tr>
					<th>Sl. No.</th>
					<th>Name</th>
					<th>Thumbnail</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for USP in usps %}
					<tr>
						<td>{{loop.index}}</td>
						<td>{{USP.name}}</td>
						<td>
							<img class="thumb" src="{{USP.image}}">
						</td>
						<td>
                        <span class="buttons">
                            <button delete="{{USP._id}}" endpoint="/api/v1/usp/{{info.slug}}" class="small delete">Delete</button>
                        </span>
                        </td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
</div>
